server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name {{ service_host }};

    ssl on;
    ssl_certificate_key /etc/letsencrypt/live/{{ service_host }}/privkey.pem;
    ssl_certificate /etc/letsencrypt/live/{{ service_host }}/fullchain.pem;

    add_header X-XSS-Protection "1; mode=block";
    add_header Strict-Transport-Security "max-age=86400";
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options nosniff;

    {% if nginx_locations is defined %}

    {{ nginx_locations }}

    {% elif service_port is defined %}

    location / {
        root /var/www/{{ service_host }};
        try_files $uri @backend;
    }

    location @backend {
        proxy_pass http://127.0.0.1:{{ service_port }};
        include proxy_params;
    }

    {% else %}

    location / {
        root /var/www/{{ service_host }};
    }

    {% endif %}
}

server {
    listen 80;
    listen [::]:80;

    server_name {{ service_host }};

    location / {
        rewrite ^(.*)$ https://{{ service_host }}$1 permanent;
    }
}
