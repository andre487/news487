server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name {{ service_host }};

    ssl on;
    ssl_certificate_key /etc/letsencrypt/live/{{ service_host }}/privkey.pem;
    ssl_certificate /etc/letsencrypt/live/{{ service_host }}/fullchain.pem;

    add_header Strict-Transport-Security "max-age=86400";

    gzip on;
    gzip_comp_level 6;
    gzip_types text/plain text/html text/css application/json application/javascript application/x-javascript text/javascript text/xml application/xml application/rss+xml application/atom+xml application/rdf+xml;

    {% if nginx_locations is defined %}

    {{ nginx_locations }}

    {% elif service_port is defined %}

    location / {
        root /var/www/{{ service_host }};
        try_files $uri @common;
    }

    location @common {
        root /var/www/common;
        try_files $uri @backend;
    }

    location @backend {
        proxy_pass http://127.0.0.1:{{ service_port }};
        include proxy_params;
    }

    {% else %}

    location / {
        root /var/www/{{ service_host }};
        try_files $uri @common;
    }

    location @common {
        root /var/www/common;
        try_files $uri =404;
    }

    {% endif %}
}

server {
    listen 80;
    listen [::]:80;

    server_name {{ service_host }};

    location / {
        rewrite ^(.*)$ https://{{ service_host }}$1 permanent;
    }
}
