server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name {{ scrapper_487_web_ui_host }};

    ssl on;
    ssl_certificate_key /etc/letsencrypt/live/{{ scrapper_487_web_ui_host }}/privkey.pem;
    ssl_certificate /etc/letsencrypt/live/{{ scrapper_487_web_ui_host }}/fullchain.pem;

    add_header Strict-Transport-Security "max-age=86400";

    root /var/www/{{ scrapper_487_web_ui_host }}/build;

    gzip on;
    gzip_comp_level 6;
    gzip_types text/plain text/html text/css application/json application/javascript application/x-javascript text/javascript text/xml application/xml application/rss+xml application/atom+xml application/rdf+xml;

    gzip_static on;

    location ~ sw\.js {
        add_header Cache-Control "public, max-age=120, must-revalidate";
        add_header Vary "Accept-Encoding";

        try_files $uri @common;
    }

    location ~ \.(?:js|css|svg|ico)$ {
        add_header Cache-Control "public, max-age=31104000, immutable";
        add_header Vary "Accept-Encoding";

        try_files $uri @common;
    }

    location / {
        try_files $uri @common;
    }

    location @common {
        root /var/www/common;
        try_files $uri @handlers;
    }

    location @handlers {
        add_header Cache-Control "public, max-age=120, must-revalidate";
        add_header Vary "Accept-Encoding";

        try_files /index.html =503;
    }
}

server {
    listen 80;
    listen [::]:80;

    server_name {{ scrapper_487_web_ui_host }};

    location / {
        rewrite ^(.*)$ https://{{ scrapper_487_web_ui_host }}$1 permanent;
    }
}
